<!-- Specific scripts booking-->
<script src="js/validate.js"></script>
<script src="js/jquery.sliderPro.min.js"></script>
<script type="text/javascript">
    $( document ).ready(function( $ ) {
        $('#Img_carousel').sliderPro({
            width: 960,
            height: 500,
            fade: true,
            arrows: true,
            buttons: false,
            fullScreen: false,
            smallSize: 500,
            startSlide: 0,
            mediumSize: 1000,
            largeSize: 3000,
            thumbnailArrows: true,
            autoplay: false
        });
    });

</script>
<script src="js/quantity-bt.js"></script>
<script src="moment/min/moment.min.js"></script>
<script src="moment/locale/<%- default_lang %>.js"></script>
<script src="eonasdan-bootstrap-datetimepicker/build/js/bootstrap-datetimepicker.min.js"></script>
<script>
    $(function () {
   
        $('#check_in').datetimepicker({
            format: "L",
            locale: "<%- default_lang %>",
            minDate: Date.now(),
            disabledDates: [<%- content.accommodations[accommodation].reserveddate %>]
        });
        $('#check_out').datetimepicker({
            format: "L",
            locale: "<%- default_lang %>",
            minDate: Date.now(),
            useCurrent: false,
            disabledDates: [<%- content.accommodations[accommodation].reserveddate %>]
        });

        $("#check_in").on("dp.change", function (e) {
            $('#check_out').data("DateTimePicker").minDate(e.date);
        });

        $("#check_out").on("dp.change", function (e) {
            $('#check_in').data("DateTimePicker").maxDate(e.date);
        });
    })

</script>